- first_team_present = match.first_team.present?
- second_team_present = match.second_team.present?
.teams.col-xs-12.col-sm-8
  .tip-btn.btn.btn-primary.disabled{class: tip_btn_class(tip, first_team_present ? match.first_team.id : nil)}
    - if first_team_present 
      = flag_img(match.first_team.code)
      %span.curt
        = match.first_team.code
      %span.verbose
        = match.first_team.name
      - if match.result
        %span.score
          = match.result.first_team_score
    - else
      ?
  .vs.verbose
    vs.
  .tip-btn.btn.btn-primary.disabled{class: tip_btn_class(tip, second_team_present ? match.second_team.id : nil)}
    - if second_team_present
      = flag_img(match.second_team.code)
      %span.curt
        = match.second_team.code
      %span.verbose
        = match.second_team.name
      - if match.result
        %span.score
          = match.result.second_team_score
    - else
      ?
  .tip-btn.draw.btn.btn-primary.disabled{class: tip_btn_class(tip, Tip::DRAW)}
    = icon('arrows-h')
    draw
