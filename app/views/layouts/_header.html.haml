%nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: tips_path}
      %span
        = icon('globe')
        = icon('trophy')
  / Collect the nav links, forms, and other content for toggling
  #navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav.navbar-left
      %li
        = link_to 'Tips', tips_path
      %li
        = link_to 'Leaderboard', leaderboard_path
      %li
        = link_to 'Chat', chat_path
      - if current_user && current_user.is_admin?
        %li
          = link_to 'Results', admin_results_path
        %li
          = link_to 'Users', admin_users_path
    %ul.nav.navbar-nav.navbar-right
      %li
        - if current_user
          = link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          = link_to 'Login', new_user_session_path
  / /.navbar-collapse
